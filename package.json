{
	"name": "periodize",
	"version": "0.1.0",
	"author": "",
	"repository": {
		"type": "git",
		"url": "https://github.com/"
	},
	"keywords": [
		"NextJS"
	],
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"clean": "npx prettier --write .",
		"test": "jest"
	},
	"dependencies": {
		"@babel/core": "^7.14.6",
		"@chakra-ui/icons": "^1.0.13",
		"@chakra-ui/react": "^1.6.4",
		"@chakra-ui/theme-tools": "^1.1.7",
		"@emotion/react": "^11.4.0",
		"@emotion/styled": "^11.3.0",
		"aws-amplify": "^4.1.2",
		"axios": "^0.21.1",
		"bad-words": "^3.0.4",
		"date-fns": "^2.22.1",
		"email-validator": "^2.0.4",
		"formik": "^2.2.9",
		"framer-motion": "^4.1.17",
		"gsap": "^3.7.0",
		"mailgun-js": "^0.22.0",
		"next": "^11.0.1",
		"react": "^17.0.2",
		"react-dom": "17.0.2",
		"react-google-login": "^5.2.2",
		"react-hook-form": "^7.9.0",
		"react-icons": "^4.2.0",
		"styled-components": "^5.3.0",
		"typescript": "^4.3.5",
		"yup": "^0.32.9"
	},
	"devDependencies": {
		"@babel/preset-typescript": "^7.14.5",
		"@types/babel__core": "^7.1.14",
		"@types/bad-words": "^3.0.0",
		"@types/email-validator": "^1.0.6",
		"@types/jest": "^26.0.23",
		"@types/mailgun-js": "^0.22.11",
		"@types/next": "^9.0.0",
		"@types/node": "^15.12.5",
		"@types/react": "^17.0.13",
		"@types/styled-components": "^5.1.10",
		"babel-plugin-styled-components": "^1.13.1",
		"eslint": "^7.29.0",
		"eslint-config-galex": "^2.16.6",
		"jest": "^27.0.6",
		"jest-watch-typeahead": "^0.6.4",
		"prettier": "^2.3.2"
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{js,jsx,ts,tsx}"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/scripts/jest/setupTests.js"
		],
		"transform": {
			"^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
			"^.+\\.css$": "<rootDir>/scripts/jest/cssTransform.js"
		},
		"transformIgnorePatterns": [
			"/node_modules/",
			"^.+\\.module\\.(css|sass|scss)$"
		],
		"moduleNameMapper": {
			"^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
		},
		"modulePaths": [
			"<rootDir>"
		],
		"coverageDirectory": "coverage",
		"watchPlugins": [
			"jest-watch-typeahead/filename",
			"jest-watch-typeahead/testname"
		],
		"clearMocks": true,
		"restoreMocks": true,
		"resetMocks": true
	}
}
